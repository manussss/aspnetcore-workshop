@page
@model FilmesCRUDRazor.pages.Filmes.IndexModel
@{
    ViewData["Title"] = "Página Inicial";
}

<div class="jumbotron">
    <div class="container shadow p-3 mb-5 bg-body rounded">
        <h1 class="text-center"><span class="glyphicon glyphicon-log-in" aria-hidden="true">To be continued</span></h1>
    </div>
</div>
<div class="d-flex justify-content-around">
    @foreach (var item in Model.Filme){
    <div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Titulo)</h5>
        <p class="card-text">@Html.DisplayFor(modelItem => item.DataLancamento), 
            @Html.DisplayFor(modelItem => item.Genero)</p>
        <a asp-page="./Filmes/Details" asp-route-id="@item.FilmeId" class="btn btn-primary">Detalhes</a>
    </div>
    </div>
    }
</div>
